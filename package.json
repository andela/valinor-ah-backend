{
  "name": "express-authorshaven",
  "version": "1.0.0",
  "description": "A Social platform for the creative at heart",
  "main": "index.js",
  "engines": {
    "node": "10.11.0"
  },
  "scripts": {
    "test": "npm run db-init && nyc mocha test/**/**/**.test.js --require babel-core/register --require babel-polyfill --exit",
    "start": "npm run clean && npm run build && node dist/app.js",
    "start:dev": "nodemon --exec babel-node app.js",
    "build": "babel . --ignore node_modules,test,coverage,dist -d dist/ && cp swagger.json dist/",
    "clean": "rm -rf dist && mkdir dist",
    "cover": "./node_modules/.bin/babel-node node_modules/.bin/istanbul cover node_modules/.bin/_mocha -- ./test/**/**/* --exit",
    "coveralls": "npm run cover -- --report lcovonly && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage",
    "db-init": "sequelize db:migrate:undo:all && sequelize db:migrate && sequelize db:seed:all",
    "db-migrate": "sequelize db:migrate",
    "db-undo-migrate": "sequelize db:migrate:undo:all",
    "db-role-seed": "sequelize db:seed:all",
    "db-init-test-dev": "sequelize db:migrate:undo:all --env development && sequelize db:migrate --env development"
  },
  "author": "Andela Simulations Programme",
  "license": "MIT",
  "dependencies": {
    "@sendgrid/mail": "^6.3.1",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.18.3",
    "cors": "^2.8.4",
    "cross-env": "^5.2.0",
    "dotenv": "^6.0.0",
    "ejs": "^2.6.1",
    "errorhandler": "^1.5.0",
    "express": "^4.16.3",
    "express-jwt": "^5.3.1",
    "express-session": "^1.15.6",
    "express-validator": "^5.3.0",
    "jsonwebtoken": "^8.3.0",
    "method-override": "^2.3.10",
    "methods": "^1.1.2",
    "morgan": "^1.9.0",
    "nodemon": "^1.18.5",
    "nyc": "^13.1.0",
    "passport": "^0.4.0",
    "passport-facebook": "^2.1.1",
    "passport-google-oauth": "^1.0.0",
    "passport-local": "^1.0.0",
    "passport-twitter": "^1.0.4",
    "pg": "^7.5.0",
    "pg-hstore": "^2.3.2",
    "request": "^2.87.0",
    "sequelize": "^4.41.0",
    "sequelize-cli": "^5.2.0",
    "slug": "^0.9.1",
    "swagger-ui-express": "^4.0.1",
    "underscore": "^1.9.1",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-http": "^4.2.0",
    "coveralls": "^3.0.2",
    "eslint": "^5.7.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "istanbul": "^1.1.0-alpha.1",
    "istanbul-threshold-exit-code": "^1.0.3",
    "mocha": "^5.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nock": "^10.0.1"
  }
}
